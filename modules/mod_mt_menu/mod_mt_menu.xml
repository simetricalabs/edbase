	<authorEmail>mtree@mosets.com</authorEmail>
	<authorUrl>www.mosets.com</authorUrl>
	<version>3.0.0</version>
	<description>MOD_MT_MENU_XML_DESC</description>
	<files>
		<filename module="mod_mt_menu">mod_mt_menu.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_mt_menu.ini</language>
		<language tag="en-GB">en-GB.mod_mt_menu.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_mtree/elements">
				<field name="limit_toplist" type="radio" default="0" label="MOD_MT_MENU_FIELD_LIMITTOPLISTCURRENTCAT_LABEL" description="MOD_MT_MENU_FIELD_LIMITTOPLISTCURRENTCAT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_home" type="radio" default="0" label="MOD_MT_MENU_FIELD_HOME_LABEL" description="MOD_MT_MENU_FIELD_HOME_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_directory" type="radio" default="1" label="MOD_MT_MENU_FIELD_DIRECTORY_LABEL" description="MOD_MT_MENU_FIELD_DIRECTORY_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_allcats" type="radio" default="1" label="MOD_MT_MENU_FIELD_ALLCATEGORIES_LABEL" description="MOD_MT_MENU_FIELD_ALLCATEGORIES_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_all" type="radio" default="1" label="MOD_MT_MENU_FIELD_ALLLISTINGS_LABEL" description="MOD_MT_MENU_FIELD_ALLLISTINGS_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_addlisting" type="radio" default="1" label="MOD_MT_MENU_FIELD_ADDLISTING_LABEL" description="MOD_MT_MENU_FIELD_ADDLISTING_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_addcategory" type="radio" default="1" label="MOD_MT_MENU_FIELD_ADDCAT_LABEL" description="MOD_MT_MENU_FIELD_ADDCAT_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_mypage" type="radio" default="1" label="MOD_MT_MENU_FIELD_MYPAGE_LABEL" description="MOD_MT_MENU_FIELD_MYPAGE_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_myfavourites" type="radio" default="1" label="MOD_MT_MENU_FIELD_MYFAVOURITES_LABEL" description="MOD_MT_MENU_FIELD_MYFAVOURITES_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_myreviews" type="radio" default="1" label="MOD_MT_MENU_FIELD_MYREVIEWS_LABEL" description="MOD_MT_MENU_FIELD_MYREVIEWS_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_newlisting" type="radio" default="1" label="MOD_MT_MENU_FIELD_NEWLISTING_LABEL" description="MOD_MT_MENU_FIELD_NEWLISTING_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_recentlyupdatedlisting" type="radio" default="1" label="MOD_MT_MENU_FIELD_RECENTLYUPDATEDLISTING_LABEL" description="MOD_MT_MENU_FIELD_RECENTLYUPDATEDLISTING_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_featuredlisting" type="radio" default="1" label="MOD_MT_MENU_FIELD_FEATUREDLISTING_LABEL" description="MOD_MT_MENU_FIELD_FEATUREDLISTING_DESC">
