					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_mostreviewedlisting" type="radio" default="1" label="MOD_MT_MENU_FIELD_MOSTREVIEWEDLISTING_LABEL" description="MOD_MT_MENU_FIELD_MOSTREVIEWEDLISTING_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="@spacer" type="spacer" default="" label="" />

				<field name="show_addlisting_force" type="radio" default="0" label="MOD_MT_MENU_FIELD_SHOWADDLISTINGINNONDIRECTORYPAGES_LABEL" description="MOD_MT_MENU_FIELD_SHOWADDLISTINGINNONDIRECTORYPAGES_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="assignment">
				<field
					name="module_assignment"
					type="mtmoduleassignment"
					label="COM_MODULES_MODULE_ASSIGN" />
				<field
					name="categories_assignment"
					type="categoriesassignment"
					label="MOD_MT_MENU_FIELD_CATEGORIES_ASSIGNMENT_LABEL"
					description="MOD_MT_MENU_FIELD_CATEGORIES_ASSIGNMENT_DESC" />
				<field
					name="pages_assignment"
					type="mtpagesassignment"
					label="MOD_MT_MENU_FIELD_PAGES_ASSIGNMENT_LABEL"
					description="MOD_MT_MENU_FIELD_PAGES_ASSIGNMENT_DESC" />
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="class_sfx"
					type="text"
					label="MOD_MT_MENU_FIELD_CLASS_LABEL"
					description="MOD_MT_MENU_FIELD_CLASS_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
