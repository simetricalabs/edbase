				<field name="show_mostfavoured" type="radio" default="1" label="MOD_MT_MENU_FIELD_FAVOUREDLISTING_LABEL" description="MOD_MT_MENU_FIELD_FAVOUREDLISTING_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_popularlisting" type="radio" default="1" label="MOD_MT_MENU_FIELD_POPULARLISTING_LABEL" description="MOD_MT_MENU_FIELD_POPULARLISTING_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_mostratedlisting" type="radio" default="1" label="MOD_MT_MENU_FIELD_MOSTRATEDLISTING_LABEL" description="MOD_MT_MENU_FIELD_MOSTRATEDLISTING_DESC">
